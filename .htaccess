#sudo a2enmod rewrite && sudo service apache2 restart
<IFModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILNAME} !-f
    RewriteCond %{REQUEST_FILNAME} !-d
    #kivétel adása a szabályhoz, hogy a 
    #http://localhost/Style/style.css kérést kiszolgálja a szerver.
    RewriteCond %{REQUEST_URI} !/Application/Style
    RewriteCond %{REQUEST_URI} !/Application/Script
    RewriteCond %{REQUEST_URI} !/Application/img
    RewriteCond %{REQUEST_URI} !/Application/Images
    RewriteCond %{REQUEST_URI} !/Public/*
    RewriteCond %{REQUEST_URI} !/Templates/User/signUp.js
    RewriteCond %{REQUEST_URI} !/Templates/User/signIn.js
    RewriteCond %{REQUEST_URI} !/Templates/User/account.js
    RewriteCond %{REQUEST_URI} !/Templates/Header/header.js    
    RewriteRule ^ index.php [L]
</IFModule>
# A minusszal kiakapcsoljuk a könyvtárak kilistázásának lehetőségét.
Options -Indexes